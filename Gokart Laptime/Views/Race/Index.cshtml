@model IEnumerable<Gokart_Laptime.Models.RaceModel>

@{
    ViewData["Title"] = "Races";
}

<form asp-action="Search" class="row g-3 mb-3 justify-content-md-center">
    <div class="col-lg-4">
        <input class="form-control bg-dark text-white" placeholder="Enter a racetrack name">
    </div>
    <div class="col-lg-2">
        <button type="submit" class="w-100 btn btn-outline-info"><i class="fas fa-search me-2"></i>Search</button>

    </div>
    <div class="col-lg-2">
        <a asp-action="Create" class="w-100 btn btn-outline-success"><i class="fas fa-plus me-2"></i>New</a>
    </div>
</form>

@if (Model.Count() > 0)
{
    <div class="table-responsive rounded col-xl-8 mx-auto">
        <table class="table text-light table-bordered border-secondary text-nowrap">
            <thead class="bg-danger text-center">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RaceId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RaceTrackName)
                    </th>
                     <th>
                        @Html.DisplayNameFor(model => model.RaceDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="text-center align-middle">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RaceId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RaceTrackName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RaceDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="">
                            <a asp-action="Details" asp-route-id="@item.RaceId" class="btn btn-outline-info me-2"><i class="fas fa-eye"></i></a>
                            <a asp-action="Edit" asp-route-id="@item.RaceId" class="btn btn-outline-warning "><i class="fas fa-edit"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <h2 class="text-center">No racetracks have been added yet!</h2>

}


