@model IEnumerable<Gokart_Laptime.Models.RaceTrackModel>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = @localizer["Racetracks"];
}



<form asp-action="Index" class="col-xl-8 row gap-2 mb-3 mx-auto">
    <div class="col-12 col-sm px-0">
        <input name="searchRaceTrack" class="form-control bg-dark text-white" placeholder="@localizer["RaceTrackName"]">
    </div>
    <div class="col-12 col-sm px-0">
        <button type="submit" class="w-100 btn btn-outline-info"><i class="fas fa-search me-2"></i>@localizer["Search"]</button>

    </div>
    <div class="col-12 col-sm px-0">
        <a asp-action="Create" class="w-100 btn btn-outline-success"><i class="fas fa-plus me-2"></i>@localizer["New"]</a>
    </div>
</form>

@if (Model.Count() > 0)
{
    @foreach (var raceTrack in Model)
    {
        <div class="col-xl-8 mb-3 mx-auto card bg-dark border-secondary text-light">
            <div class="card-header bg-danger">
                <span class="fw-bold fs-5">@Html.DisplayFor(model => raceTrack.RaceTrackId) - @Html.DisplayFor(model => raceTrack.RaceTrackName)</span>
            </div>
            <div class="card-body">
                <div class="row g-2 justify-content-md-start">
                    <div class="col-md-3">
                        <span class="fw-bold">@Html.DisplayNameFor(model => model.Length)</span>
                    </div>
                    <div class="col">
                        @Html.DisplayFor(model => raceTrack.Length)
                    </div>

                    <div class="w-100"></div>

                    <div class="col-md-3">
                        <span class="fw-bold">@Html.DisplayNameFor(model => model.Address)</span>
                    </div>
                    <div class="col">
                        @Html.DisplayFor(model => raceTrack.Address)
                    </div>

                    <div class="w-100"></div>

                    <div class="col-md-3">
                        <span class="fw-bold">@Html.DisplayNameFor(model => model.Description)</span>
                    </div>
                    <div class="col">
                        @Html.DisplayFor(model => raceTrack.Description)
                    </div>

                    <div class="w-100"></div>

                    <div class="col-md-3">
                        <span class="fw-bold">@Html.DisplayNameFor(model => model.Races)</span>
                    </div>
                    <div class="col mb-2">
                        @Html.DisplayFor(model => raceTrack.Races.Count)
                    </div>
                    
                    <div class="w-100"></div>

                </div>
                <div class="row g-2 border-secondary card-footer text-center pt-3">
                    <a asp-action="Details" asp-route-id="@raceTrack.RaceTrackId" class="col btn btn-outline-info me-2"><i class="fas fa-eye me-1"></i>@localizer["View"]</a>
                    <a asp-action="Edit" asp-route-id="@raceTrack.RaceTrackId" class="col btn btn-outline-warning "><i class="fas fa-edit me-1"></i>@localizer["Edit"]</a>
                </div>
            </div>
        </div>
    }
}
else
{
    <h2 class="text-center">@localizer["NoRaceTrack"]</h2>

}


