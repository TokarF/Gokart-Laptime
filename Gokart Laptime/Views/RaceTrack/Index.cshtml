@model IEnumerable<Gokart_Laptime.Models.RaceTrackModel>

@{
    ViewData["Title"] = "Racetracks";
}



<form asp-action="Search" class="col-xl-8 row gap-2 mb-3 mx-auto">
    <div class="col-12 col-sm px-0">
        <input class="form-control bg-dark text-white" placeholder="Enter a racetrack name">
    </div>
    <div class="col-12 col-sm px-0">
        <button type="submit" class="w-100 btn btn-outline-info"><i class="fas fa-search me-2"></i>Search</button>

    </div>
    <div class="col-12 col-sm px-0">
        <a asp-action="Create" class="w-100 btn btn-outline-success"><i class="fas fa-plus me-2"></i>New</a>
    </div>
</form>

@if (Model.Count() > 0)
{
      <div class="table-responsive rounded col-xl-8 mx-auto">
    <table class="table text-light table-bordered border-secondary text-nowrap">
        <thead class="bg-danger text-center">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RaceTrackId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RaceTrackName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Length)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody class="text-center align-middle">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RaceTrackId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RaceTrackName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Length)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="">
                        <a asp-action="Details" asp-route-id="@item.RaceTrackId" class="btn btn-outline-info me-2"><i class="fas fa-eye"></i></a>
                        <a asp-action="Edit" asp-route-id="@item.RaceTrackId" class="btn btn-outline-warning "><i class="fas fa-edit"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
}
else
{
    <h2 class="text-center">No racetracks have been added yet!</h2>

}


