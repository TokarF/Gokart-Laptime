@model Gokart_Laptime.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
}

<form asp-action="ChangePassword" class="row g-2 justify-content-md-center">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-xl-6">
        <label asp-for="CurrentPassword" class="mb-2"></label>
        <input asp-for="CurrentPassword" class="form-control mb-2 bg-dark text-white" placeholder="Enter current password">
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>

    <div class="w-100"></div>

    <div class="col-xl-6">
        <label asp-for="NewPassword" class="mb-2"></label>
        <input asp-for="NewPassword" class="form-control mb-2 bg-dark text-white" placeholder="Enter the new password">
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

        <div class="w-100"></div>

    <div class="col-xl-6">
        <label asp-for="NewPasswordConfirm" class="mb-2"></label>
        <input asp-for="NewPasswordConfirm" class="form-control mb-2 bg-dark text-white" placeholder="Enter new password again">
        <span asp-validation-for="NewPasswordConfirm" class="text-danger"></span>
    </div>

    <div class="w-100"></div>


    <div class="col-xl-6">
        <button type="submit" class="w-100 btn btn-outline-warning"><i class="fas fa-pencil me-2"></i>Update Password</button>
    </div>

    <div class="w-100"></div>

    <div class="col-xl-6">
        <a class="w-100 btn btn-outline-info"><i class="fas fa-angle-double-left me-2"></i>Go Back</a>
    </div>
</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
